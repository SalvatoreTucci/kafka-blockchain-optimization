{
  "dashboard": {
    "id": null,
    "title": "Kafka Performance Dashboard",
    "tags": ["kafka", "performance", "blockchain"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Kafka Messages Per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(kafka_server_brokertopicmetrics_messagesin_total[5m])) by (topic)",
            "legendFormat": "Messages/sec - {{topic}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Messages/sec",
            "show": true
          }
        ],
        "xAxes": [
          {
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Kafka Bytes Per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(kafka_server_brokertopicmetrics_bytesin_total[5m])) by (topic)",
            "legendFormat": "Bytes In/sec - {{topic}}",
            "refId": "A"
          },
          {
            "expr": "sum(rate(kafka_server_brokertopicmetrics_bytesout_total[5m])) by (topic)",
            "legendFormat": "Bytes Out/sec - {{topic}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Bytes/sec",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "CPU Usage by Container",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{name=~\"kafka.*|zookeeper.*\"}[5m])) by (name) * 100",
            "legendFormat": "CPU % - {{name}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "CPU %",
            "show": true,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Memory Usage by Container",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_usage_bytes{name=~\"kafka.*|zookeeper.*\"}) by (name) / 1024 / 1024",
            "legendFormat": "Memory MB - {{name}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Kafka Request Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "kafka_network_requestmetrics_totaltimems{quantile=\"0.95\",request=\"Produce\"}",
            "legendFormat": "Produce P95 Latency",
            "refId": "A"
          },
          {
            "expr": "kafka_network_requestmetrics_totaltimems{quantile=\"0.95\",request=\"FetchConsumer\"}",
            "legendFormat": "Fetch P95 Latency",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Latency (ms)",
            "show": true
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s"
  }
}