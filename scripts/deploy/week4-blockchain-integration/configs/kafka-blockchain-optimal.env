# Optimal Kafka Configuration for Blockchain (from Week 3)
# config_100: Scientifically validated optimal parameters

# OPTIMAL FACTORS (Week 3 Results)
KAFKA_BATCH_SIZE=65536                  # 65KB - Large batch efficiency
KAFKA_LINGER_MS=0                       # 0ms - Zero latency priority  
KAFKA_COMPRESSION_TYPE=none             # none - No compression overhead

# BLOCKCHAIN-TUNED PARAMETERS
KAFKA_BUFFER_MEMORY=134217728           # 128MB - Blockchain workload buffer
KAFKA_NUM_NETWORK_THREADS=8             # 8 threads - Multi-org handling
KAFKA_NUM_IO_THREADS=16                 # 16 threads - Transaction processing
KAFKA_SOCKET_SEND_BUFFER_BYTES=262144   # 256KB - Blockchain message size
KAFKA_SOCKET_RECEIVE_BUFFER_BYTES=262144 # 256KB - Peer communication
KAFKA_REPLICA_FETCH_MAX_BYTES=4194304   # 4MB - Block size accommodation

# ORDERING SERVICE SPECIFIC
KAFKA_DEFAULT_REPLICATION_FACTOR=1       # Single node for testing
KAFKA_MIN_INSYNC_REPLICAS=1             # Minimum replicas
KAFKA_UNCLEAN_LEADER_ELECTION_ENABLE=false # Data consistency priority
KAFKA_AUTO_CREATE_TOPICS_ENABLE=false   # Manual topic management

# BLOCKCHAIN PERFORMANCE TUNING
KAFKA_LOG_RETENTION_HOURS=24            # 24h retention for blockchain
KAFKA_LOG_SEGMENT_BYTES=268435456       # 256MB segments
KAFKA_LOG_CLEANUP_POLICY=delete         # Cleanup old blocks

# JVM SETTINGS FOR BLOCKCHAIN
KAFKA_HEAP_OPTS="-Xmx2G -Xms2G"        # 2GB heap for blockchain load
KAFKA_JVM_PERFORMANCE_OPTS="-XX:+UseG1GC -XX:MaxGCPauseMillis=20"
